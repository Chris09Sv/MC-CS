@model IEnumerable<Muebleria.Models.Articulos>
@{
    ViewBag.Title = "Inicio";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>productos</h2>

<p>
    @Html.ActionLink("Agregar nuevo2 producto", "Nuevo", new { @class = "btn btn-secundary" })
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        

        <th>
            @Html.DisplayNameFor(model => model.Imagen)
        </th>
        <th>
            eliminar
        </th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.ActionLink(item.Name, "editar", "articulos", new { id = item.Id }, null)
            </td>

        
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>


            <td> 
      <img width="50" height="50" src="@Url.Action("convertirImagen", 
                                      "Articulos", new {id = item.Id})" />
            </td>

            <td>
                @Html.ActionLink("Eliminar", "Eliminar", "Articulos", new { Id = item.Id }, null)
            </td>

        </tr>
    }

</table>