<div class="col-sm-4">
    <h3> </h3><div style="align-content:center">
        <div class="form-group ">
            @Html.LabelFor(m => m.Clientesc.Name)
            @Html.TextBoxFor(m => m.Clientesc.Name, new { @class = "form-control" })
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Clientesc.Direccion)
            @Html.TextBoxFor(m => m.Clientesc.Direccion, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Clientesc.Telefono)
            @Html.TextBoxFor(m => m.Clientesc.Telefono, new { @class = "form-control" })
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Clientesc.Pregunta)
            @Html.TextAreaFor(m => m.Clientesc.Pregunta, new { @class = "form-control" })
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </div>
</div>


<div class="col-sm-8">

    <div id="map" class="m-4"></div>
    <script>
        function initMap() {
            var uluru = { lat: 18.466645, lng: -69.729994 };
            var map = new google.maps.Map(document.getElementById('map'), {
                zoom: 16,
                center: uluru
            });
            var marker = new google.maps.Marker({
                position: uluru,
                map: map
            });
        }
    </script>
    <script async defer
            src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCxAKfYsd-DqJR7F5UZPAuqY7Kai151zvw&callback=initMap">
    </script>

</div>

