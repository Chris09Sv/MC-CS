@model Muebleria.Models.Productos
@{
    ViewBag.Title = "Detalles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Producto</h2>

<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(p => p.Name)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.stock)
        </dt>




        <dt>
            @Html.DisplayNameFor(model => model.Imagen)
        </dt>

        <dd>
            <img  class="img-responsive img-thumbnail" width="100" src="@Url.Action("convertirImagen", "Productos", new {id = Model.Id})" />

        </dd>

    </dl>
</div>
<p>
    @Html.ActionLink("Editar", "Nuevo", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


